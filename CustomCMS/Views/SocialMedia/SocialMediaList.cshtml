@model IEnumerable<CustomCMS.Core.Model.SocialMediaModel>
@{
    ViewBag.Title = "SocialMediaList";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">SocialMedia Detail</h3>
                    <h3 class="box-title no-margin pull-right"><a href="@Url.Action("Index", "SocialMedia")">Add New</a></h3>
                </div>
                <div class="box-body">
                    <table id="tblSocialMedia" class="table table-bordered table-striped ColorTable">
                        <thead>
                            <tr>
                                <th>Social Media Name</th>
                                <th>Social URL</th>
                                <th>Active</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(s => item.SocialMediaName)</td>
                                    <td>@Html.DisplayFor(s => item.SocialURL)</td>
                                    <td>@Html.DisplayFor(s => item.SocialStatus)</td>
                                    <td>
                                        <a href="@Url.Action("Index", "SocialMedia", new { Id= item.Id})" class="" title="Edit"><i class="fa fa-fw fa-edit"></i></a>
                                        @Html.ActionLink(" ", "DeleteSocialMedia", "SocialMedia", new { Id = item.Id },
                                            new
                                            {
                                                @onclick = "return confirm('Are you sure you want to delete this Item ??');",
                                                @class = "fa fa-fw fa-trash",
                                                @title = "Delete"
                                            })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


<script>
    $(function () {
        $('#tblSocialMedia').DataTable();
    })
</script>

