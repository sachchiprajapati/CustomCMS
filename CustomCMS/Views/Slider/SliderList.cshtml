@model IEnumerable<CustomCMS.Core.Model.SliderModel>
@{
    ViewBag.Title = "SliderList";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Slider Detail</h3>
                    <h3 class="box-title no-margin pull-right"><a href="@Url.Action("Index", "Slider")">Add New</a></h3>
                </div>
                <div class="box-body">
                    <table id="tblSlider" class="table table-bordered table-striped ColorTable">
                        <thead>
                            <tr>
                                @*<th>Id</th>*@
                                <th>Title</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td>@item.Id</td>*@
                                    <td>@item.Title</td>
                                    <td>
                                        <img src="~/UploadFiles/SliderImage/@item.Image" height="30" width="50" />
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Index", "Slider", new { Id= item.Id})" class="" title="Edit"><i class="fa fa-fw fa-edit"></i></a>
                                        @Html.ActionLink(" ", "DeleteSlider", "Slider", new { Id = item.Id },
                                            new
                                            {
                                                @onclick = "return confirm('Are you sure you want to delete this Item ??');",
                                                @class = "fa fa-fw fa-trash",
                                                @title = "Delete"
                                            })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


<script>
    $(function () {
        $('#tblSlider').DataTable();
    })
</script>